        "engine": {
          "title": "Engine",
          "type": "string",
          "default": "",
          "examples": [
            "Timed",
            "RMT",
            "I2S_STREAM",
            "I2S_STATIC"
          ],
          "pattern": "^.*$",
          "enum": [
            "Timed",
            "RMT",
            "I2S_STREAM",
            "I2S_STATIC"
          ]
        },
        "idle_ms": {
          "title": "Idle_ms",
          "type": "integer",
